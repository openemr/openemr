		   <field name="reason_follow" label="Reason for follow up" type="checkbox_list" list="reas_follow" hoverover="" labelcols="1" cols="1"/>
		</section>
		
		<section name="followup_proper" label="Follow Up Proper">
		   <field name="diag_last" label="Diagnosis on last encounter" type="textfield" size="30" maxlength="255" hoverover="" labelcols="1" cols="1"/>
