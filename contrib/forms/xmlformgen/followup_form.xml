		   <field name="trt_change" label="Treatment Changed" type="dropdown_list" size="20" list="yesno" hoverover="" maxlength="255" labelcols="1" cols="1"/>
		   <field name="new_inv" label="New Investigations" type="dropdown_list" size="20" list="yesno" hoverover="" maxlength="255" labelcols="1" cols="1"/>
		   <field name="next_visit" label="Next Visit Needed" type="dropdown_list" size="20" list="yesno" hoverover="" maxlength="255" labelcols="1" cols="1"/>
		   <field name="app_done" label="Appointment Done" type="dropdown_list" size="20" list="yesno" hoverover="" maxlength="255" labelcols="1" cols="1"/>
		   <field name="app_date" label="Next Visit Date" type="date" labelcols="1" cols="1"/>
