modules = ["php-8.2", "nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "OpenEMR Server"

[[workflows.workflow]]
name = "OpenEMR Server"
author = "agent"

[[workflows.workflow.tasks]]
