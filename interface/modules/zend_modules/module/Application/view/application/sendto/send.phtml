<script>
    (function () {
        const QRDA_FORMATS = new Set(['qrda', 'qrda3', 'qrda3_consolidated']);

        function $$all(sel, root = document) {
            return Array.from(root.querySelectorAll(sel));
        }

        function $(sel, root = document) {
            return root.querySelector(sel);
        }

        function toggle(elOrId, show) {
            const el = typeof elOrId === 'string' ? document.getElementById(elOrId) : elOrId;
            if (!el) return;
            el.style.display = show ? '' : 'none';
        }

        let lastFormat = null;

        async function updateUiForDownloadFormat(fmt) {
            // Show/Hide Reporting Period
            const periodWrap = document.getElementById('ecqm_period');
            const periodSelect = document.getElementById('ecqm_reporting_period');
            const showPeriod = QRDA_FORMATS.has(fmt);

            if (periodWrap) {
                toggle(periodWrap, showPeriod);
            }
            if (periodSelect) {
                periodSelect.disabled = !showPeriod;
            }

            // Toggle component panels
            toggle('componentsForQRDA', fmt === 'qrda');
            toggle('componentsForQRDA3', fmt === 'qrda3');
            toggle('componentsForQRDA3Consolidated', fmt === 'qrda3_consolidated');
            toggle('componentsForCCDA', fmt === 'ccda');

            // If entering a QRDA mode, refresh measures for selected period
            if (showPeriod && periodSelect && fmt !== lastFormat) {
                try {
                    await refreshMeasuresList(periodSelect.value);
                } catch (e) {
                    console.warn('Unable to refresh measures list:', e);
                }
            }

            lastFormat = fmt;
        }

        function getSelectedDownloadFormat() {
            const checked = document.querySelector('input[name="downloadformat"]:checked');
            return checked ? checked.value : null;
        }

        function wireDownloadFormatListeners() {
            $$all('input[name="downloadformat"]').forEach(radio => {
                radio.addEventListener('change', () => {
                    updateUiForDownloadFormat(radio.value);
                });
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            wireDownloadFormatListeners();
            // Initialize UI based on current selection
            const initial = getSelectedDownloadFormat();
            updateUiForDownloadFormat(initial);
        });
    })();
</script>
