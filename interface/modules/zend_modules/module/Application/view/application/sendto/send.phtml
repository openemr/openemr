<script>
    async function refreshReportingPeriod(selectedPeriod) {
        // Show loading indicator
        document.getElementById('period_loading').style.display = 'inline';

        try {
            // Get CSRF token
            const csrfToken = document.querySelector('input[name="csrf_token"]')?.value || '';

            // Store the selected period using modern fetch API
            const response = await fetch(WEB_ROOT + '/interface/modules/zend_modules/module/Application/ajax/reporting_period_handler.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams({
                    ajax_mode: 'update_reporting_period',
                    period: selectedPeriod,
                    csrf_token: csrfToken
                })
            });

            // Hide loading indicator
            document.getElementById('period_loading').style.display = 'none';

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }

            const data = await response.json();

            if (data.success) {
                // Refresh the measures lists
                await refreshMeasuresList(selectedPeriod);

                // Show success message briefly
                showPeriodMessage('<?php echo $this->listenerObject->z_xlt('Reporting period updated successfully'); ?>', 'success');
            } else {
                showPeriodMessage(data.message || '<?php echo $this->listenerObject->z_xlt('Error updating reporting period'); ?>', 'error');
            }

        } catch (error) {
            // Hide loading indicator
            document.getElementById('period_loading').style.display = 'none';

            console.error('Error updating reporting period:', error);
            showPeriodMessage('<?php echo $this->listenerObject->z_xlt('Network error updating reporting period'); ?>', 'error');
        }
    }

    async function refreshMeasuresList(selectedPeriod) {
        // Refresh both QRDA I and QRDA III measure lists
        const qrdaSelect = document.getElementById('report_measures');
        const qrda3Select = document.getElementById('report_measures_cat3');

        if (!qrdaSelect && !qrda3Select) {
            return; // No measure selects to update
        }

        try {
            const csrfToken = document.querySelector('input[name="csrf_token"]')?.value || '';

            const response = await fetch(WEB_ROOT + '/interface/modules/zend_modules/module/Application/ajax/reporting_period_handler.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams({
                    ajax_mode: 'get_measures_for_period',
                    period: selectedPeriod,
                    csrf_token: csrfToken
                })
            });

            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }

            const data = await response.json();

            if (data.success && data.measures) {
                updateMeasuresDropdown(qrdaSelect, data.measures);
                updateMeasuresDropdown(qrda3Select, data.measures);
                console.log(`Updated measures list: ${data.count} measures loaded for period ${data.period}`);
            } else {
                console.error('Error loading measures:', data.message);
            }

        } catch (error) {
            console.error('Error refreshing measures list:', error);
        }
    }

    function updateMeasuresDropdown(selectElement, measures) {
        if (!selectElement) return;

        // Store current selection
        const currentValue = selectElement.value;

        // Clear existing options except for default ones
        const defaultOptions = [];
        for (let i = 0; i < selectElement.options.length; i++) {
            const option = selectElement.options[i];
            if (option.value === '' || option.value === 'all') {
                defaultOptions.push({
                    value: option.value,
                    text: option.text,
                    selected: option.selected
                });
            }
        }

        // Clear all options
        selectElement.innerHTML = '';

        // Add back default options
        defaultOptions.forEach(opt => {
            const option = document.createElement('option');
            option.value = opt.value;
            option.text = opt.text;
            option.selected = opt.selected;
            selectElement.appendChild(option);
        });

        // Add measure options
        measures.forEach(measure => {
            const option = document.createElement('option');
            option.value = measure.measure_id;
            option.text = `${measure.measure_id} - ${measure.title}`;
            option.title = measure.title;
            if (currentValue === measure.measure_id) {
                option.selected = true;
            }
            selectElement.appendChild(option);
        });
    }

    function showPeriodMessage(message, type) {
        // Create or update a message div
        let messageDiv = document.getElementById('period_message');
        if (!messageDiv) {
            messageDiv = document.createElement('div');
            messageDiv.id = 'period_message';
            messageDiv.style.cssText = 'margin:5px 0; padding:5px 10px; border-radius:3px; font-size:12px;';
            document.getElementById('ecqm_reporting_period').parentNode.appendChild(messageDiv);
        }

        // Set message content and style
        messageDiv.textContent = message;
        messageDiv.className = type === 'success' ? 'alert-success' : 'alert-danger';
        messageDiv.style.backgroundColor = type === 'success' ? '#d4edda' : '#f8d7da';
        messageDiv.style.color = type === 'success' ? '#155724' : '#721c24';
        messageDiv.style.border = type === 'success' ? '1px solid #c3e6cb' : '1px solid #f5c6cb';
        messageDiv.style.display = 'block';

        // Hide after 3 seconds
        setTimeout(() => {
            messageDiv.style.display = 'none';
        }, 2000);
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function () {
        $("#download_all").click()
