<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{{ 'Prior Authorization Manager' | xlt }}{% endblock %}</title>
    
    {{ setupHeader(header_assets | default(['common'])) }}
    <link rel="stylesheet" href="{{ webroot | default('') }}/interface/modules/custom_modules/oe-module-prior-authorizations/public/assets/css/prior-auth-module.css">
    
    {% block additional_head %}{% endblock %}
</head>
<body class="pa-body" style="background-color: #f8f9fa !important; color: #212529 !important;">
    <main class="pa-main" role="main">
        {% block breadcrumb %}{% endblock %}
        
        <div class="container-fluid px-4 py-3" style="background-color: transparent !important;">
            {% block page_header %}{% endblock %}
            
            {% block content_wrapper %}
                <div class="row">
                    <div class="col-12">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
    </main>
    
    {% block footer %}
    <footer class="pa-footer text-center py-3 mt-auto" style="background-color: #ffffff !important; color: #6c757d !important; border-top: 1px solid #dee2e6;">
        <div class="container-fluid">
            <small class="text-muted">
                &copy; {{ "now"|date("Y") }} {{ 'Juggernaut Systems Express' | xlt }}
                â€¢ {{ 'Prior Authorization Manager' | xlt }} v{{ module_version | default('1.0.0') }}
            </small>
        </div>
    </footer>
    {% endblock %}
    
    {% block scripts %}{% endblock %}
    
    <!-- Loading overlay for better UX -->
    <div id="pa-loading-overlay" class="pa-loading-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255, 255, 255, 0.9); z-index: 9999; justify-content: center; align-items: center;">
        <div class="pa-loading-spinner" style="text-align: center; color: #0066cc;">
            <div class="pa-loading"></div>
            <p class="mt-3" style="color: #0066cc;">{{ 'Loading...' | xlt }}</p>
        </div>
    </div>
</body>
</html>
