
{% extends "interface/smart/admin-client/base.html.twig" %}
{% block title %}{{ "Token Tools"|xlt }}{% endblock %}
{% block contents %}
<div class="card-body">
    <?php if (!empty($message)) : ?>
    <div class="row">
        <div class="col-12">
            <div class="alert alert-success">
                <?php echo text($message); ?>
            </div>
        </div>
    </div>
    <?php endif; ?>
    <div class="row">
        <div class="col-12">
            {% if message %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-success">
                        {{ message|text }}
                    </div>
                </div>
            </div>
            {% endif %}
            {% block toolContents %}
            <form method="POST" action="{{ actionUrl|attr_url }}">
                {% include "interface/smart/admin-client/partials/textarea.html.twig" with {key: 'token', 'setting': tokenSettings} %}
                <input type="submit" class="btn btn-sm btn-primary" value="{{ "Parse Token"|xla }}" />
            </form>
            {% endblock %}
        </div>
    </div>
{% endblock %}
