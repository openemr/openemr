function CheckRequired(objID) {

    // for text boxes
    if ($('#'+objID).is('input')) {
        if ($('#'+objID).val() == "") {
            alert({{'Missing a required field and will be highlighted'|xlj}});
            $('#'+objID).css("backgroundColor", "pink");
            return false;
        }
    }

    // for select boxes
    if ($('#'+objID).is('select')) {
        if ($('#'+objID).val() == "0") {
            alert({{'Missing a required field'|xlj}});
            $('#'+objID).css("backgroundColor", "pink");
            return false;
        }
    }

    return true;
}

