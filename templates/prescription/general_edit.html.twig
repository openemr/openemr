<script>
    {% if dispenseEnabled %}

    // Invoke the popup to dispense a drug.
    function dispense() {
        var f = document.forms[0];
        // do some basic validation
        if (f.disp_quantity.value == "" || isNaN(f.disp_quantity.value) || parseInt(f.disp_quantity.value) <= 0) {
            alert({{'Please enter a valid dispense quantity'|xlj}});
            f.disp_quantity.focus();
            return false;
        }
        if (f.dispense_encounter_id.value == "" || isNaN(f.dispense_encounter_id.value) || parseInt(f.dispense_encounter_id.value) <= 0) {
            alert({{'Dispensing a drug requires a linked encounter'|xlj}});
            f.dispense_encounter_id.focus();
            return false;
        }
        let drugId = parseInt(f.dispense_drug_id.value || 0);
        if (isNaN(drugId)) {
            alert({{ 'System error occurred. Try again later or contact customer support'|xlj }});
            console.error('Invalid drug id for dispensation: ' + f.dispense_drug_id.value);
            return false;
        }
        let promise = dlgopen('interface/drugs/dispense_drug.php' +
            '?drug_id=' + encodeURIComponent(drugId) +
            '&prescription=' + encodeURIComponent(f.id.value) +
            '&quantity=' + encodeURIComponent(f.disp_quantity.value) +
            '&fee=' + encodeURIComponent(f.disp_fee.value) +
            '&encounter=' + encodeURIComponent(f.dispense_encounter_id.value),
            '_blank', 400, 200, false, {{ "Dispense Drug"|xlj }}, {
                // when the dispense dialog closes, we'll toggle the dispense options off
                // onClosed: toggleDispense
                'resolvePromiseOn': 'close'
            });
        promise.then(function() {
            toggleDispense();
        });
    }
    function toggleDispense() {
        $('.dispense_option,.prescription-controls .btn-primary,.amc-card').toggle();
        $('.btn.btn-toggle-dispense').toggle();
    }
    $(document).ready(function(){
        $(".btn.btn-toggle-dispense").click(function(){
            toggleDispense();
        });
        $('.btn-presc-dispense').click(function(evt) {
            evt.preventDefault();
            dispense();
            return false;
        });
    });
    {% endif %}

