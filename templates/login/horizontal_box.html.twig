{% extends "login/base.html.twig" %}

{% block css %}
{{ parent() }}
<style>
@media screen (min-width: 768px) {
    .box {
        width: 100%;
    }
}
.box {
    width: 75%;
}
</style>
{% endblock %}

{% block content %}
<div class="vh-100 w-100 p-3 p-lg-5 d-flex justify-content-center align-items-center">
    {# The primary box container #}
    <div class="shadow-lg box m-0 d-flex flex-column flex-md-row rounded {{ login_box_classes|default([])|join(' ') }}">

        {# The Logo container #}
        <div class="py-4 px-4 py-md-5 px-md-5 d-flex flex-column justify-content-center align-items-stretch flex-fill">
            <div class="align-self-center">
                {% set logo_flex_direction = "flex-column" %}
                {% include "login/partials/html/primary_logo.html.twig" %}
            </div>
        </div>

        {# The Login details container #}
        <div class="p-4 p-md-5 flex-fill bg-white">
            {% include "login/partials/html/login_details.html.twig" %}

            {% include "login/partials/html/acknowledgements.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}
