<div class="{{ small_logo_container_class_list|default(['d-flex', 'justify-content-around'])|join(' ')|attr }}">
{% if displaySmallLogo == 1 %}
    <img src="{{ smallLogoOne|attr }}" alt="{{ 'Small Logo 1'|xlt }}" class="img-fluid">
{% endif %}
{% if displaySmallLogo == 2 %}
    <img src="{{ smallLogoTwo|attr }}" alt="{{ 'Small Logo 2'|xlt }}" class="img-fluid">
{% endif %}
{% if displaySmallLogo == 3 %}
    <img src="{{ smallLogoOne|attr }}" alt="{{ 'Small Logo 1'|xlt }}" class="img-fluid">
    <img src="{{ smallLogoTwo|attr }}" alt="{{ 'Small Logo 2'|xlt }}" class="img-fluid">
{% endif %}
</div>
