}

function GetCompleteStatus()
{
	$tmp = '';
 	$sql="SELECT * FROM list_options WHERE UPPER(list_id)='RTO_STATUS' AND ".
		"UPPER(title) LIKE '%COMPLETE%'";
 	$lres = sqlStatement($sql);
	$lrow = sqlFetchArray($lres);
	if($lrow{'option_id'}) { $tmp = $lrow{'option_id'}; }
	return($tmp);
}

